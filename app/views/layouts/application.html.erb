<!DOCTYPE html>
<html>
<head>
  <title>Gundam Base</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <style>
      body {
          padding-top: 70px;
      }

      .navbar {
          background-color: #1c1c1c;
      }

      .btn-primary {
          background-color: #0056b3;
          border-color: #0056b3;
          color: #fff !important;
      }

      .fixed-button {
          list-style-type: none;
          padding: 0;
          margin: 0;
          position: fixed;
          bottom: 20px;
          right: 20px;
          z-index: 999;
      }
  </style>
</head>
<body>
<% if user_signed_in? %>
  <nav class="navbar fixed-top navbar-expand-lg navbar-dark">
    <%= link_to "Gundam Base", root_path, class: "navbar-brand" %>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="fixed-button">
        <li class="nav-item">
          <%= link_to "Criar Post", new_post_path, class: "nav-link btn btn-primary" %>
        </li>
      </ul>
      <ul class="navbar-nav ml-auto">
        <% if current_user != @user %>
          <li class="nav-item">
            <%= link_to "Meu Perfil", user_path(current_user), class: "nav-link btn btn-primary" %>
          </li>
        <% else %>
          <li class="nav-item">
            <%= button_to "Sair", destroy_user_session_path, method: :delete, class: "btn btn-danger" %>
          </li>
        <% end %>
      </ul>
    </div>
  </nav>
<% end %>
<div class="container mt-4">
  <%= yield %>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>