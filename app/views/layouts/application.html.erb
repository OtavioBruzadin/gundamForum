  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">

  <style>

      .navbar {
          background-color: #1c1c1c;
      }

      .gundam-logo {
          max-height: 50px;
      }

      .btn-primary {
